<div class="comment">
  <strong><%= comment.user.email %></strong>
  <div>
    Likes: <%= comment.likes.count %>
    <% if current_user.liked?(comment) %>
      <%= link_to "Like", like_gallery_image_comment_path(@gallery, @image, comment), method: :post %>
    <% else %>
      <%= link_to "Unlike", unlike_gallery_image_comment_path(@gallery, @image, comment), method: :delete %>
    <% end %>
  </div>
  <div>
    Hates: <%= comment.hates.count %>
    <% if current_user.hated?(comment) %>
      <%= link_to "Hate", hate_gallery_image_comment_path(@gallery, @image, comment), method: :post %>
    <% else %>
      <%= link_to "Unhate", unhate_gallery_image_comment_path(@gallery, @image, comment), method: :delete %>
    <% end %>
  </div>
  <p><%= time_ago_in_words(comment.created_at) %></p>
  <p><%= comment.content %></p>
</div>
