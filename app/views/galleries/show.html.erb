<h1><%= @gallery.name %></h1>
<p><%= @gallery.description.capitalize %></p>

<%= link_to "New Image", new_gallery_image_path(@gallery.id) %>
<%= link_to "Edit", edit_gallery_path(@gallery.id) %>
<%= link_to "Destroy", gallery_path(@gallery.id), method: :delete, data: { confirm: "Are you sure?" } %>
<ul>
<% @gallery.images.each do |image| %>
  <li><%= image_tag image.url, width: 200  %>
  <%= link_to image.name, gallery_image_path(@gallery, image) %>
  <%= link_to "Destroy Image", gallery_image_path(@gallery, image), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>
