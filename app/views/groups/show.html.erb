<h1><%= @group.name %></h1>

<% if current_user.member?(@group) %>
  <%= link_to "Leave Group", leave_group_path(@group), method: :delete, data: { confirm: "Are You Sure?" } %>
<% else %>
  <%= link_to "Join Group", join_group_path(@group), method: :post %>
<% end %>
<ul>
  <% @group.images.each do |image| %>
    <li><%= render image  %></li>
  <% end %>
</ul>

